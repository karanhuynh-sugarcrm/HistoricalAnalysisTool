<h1>Historical Analysis Tool</h1>

<form role="form" action="/results" method="POST"> 

<div class="row">

	<div class="form-group col-lg-6">
	        <div class="input-group">
	            <span class="input-group-addon" id="fromInputSpan">Test Runs</span>
	            <input type="number" class="form-control" placeholder="#" id="numRuns" name="numRuns" value="{{runs}}" required>
	        </div>
	</div>

	<div class="form-group col-lg-6">
        <div class="input-group">
            <span class="input-group-addon" id="fromInputSpan">Job</span>
            <input type="text" class="form-control" placeholder="7700_Voodoo_Tests" id="jobName" name="jobName" value="{{jobs}}" required>
        </div>
    </div>

    <div class="form-group col-lg-6">
        <button type="submit" id="submit" class="btn btn-success">Submit</button>
    </div>

</div>

</form>
 <div class="container">
<table id="table" class="table table-striped">
    <thead>
        <tr>
        <th data-field="testName"> Test Name</th>
        <th data-field="stat"> Stability</th>
        <th>Status</th>
        </tr>
    
    </thead>
    <tbody>
        {{#each tests}} 
        <tr>
            <td>{{@key}}</td>
            <td>{{this.stat}}</td>
            {{#each arr}}
            <td bgcolor={{getStatusColour this.status}}> {{@key}} : {{{getLink this}}}</td> 

        {{/each}}
        </tr>
       
        {{/each}}
    </tbody>

</table>
</div>



