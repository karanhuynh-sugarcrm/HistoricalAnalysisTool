<h1>Historical Analysis Tool</h1>
<form class="form" action="/results" method="POST"> 
    <div class="row">
        <div class="form-group col-xs-6 col-md-2">
                <div class="input-group">
                    <span class="input-group-addon">Test Runs</span>
                    <input type="number" min="2" class="form-control" placeholder="#" id="numRuns" name="numRuns" value="{{numRuns}}" required>
                </div>
        </div>
        <div class="form-group col-xs-6 col-md-4">
            <div class="input-group">
                <span class="input-group-addon">Job</span>
                <input type="text" class="form-control" placeholder="7700_Voodoo_Tests/" id="jobName" name="jobName" value="{{jobName}}" required>
                
            </div>
        </div>  
      
        <div class="form-group col-xs-6 col-md-6">
            <div class="input-group">
                <span class="input-group-addon">Test Name</span>
                <input type="text" class="form-control" placeholder="(optional)" id="singleTestSearch" name=
                "singleTestSearch" value="{{singleTestSearch}}">
                <span class="input-group-btn">
                <button type="submit" id="submit" class="btn btn-success">Submit</button> 
                </span>
            </div>
        </div>
    </div>

</form>
<button type="button" id="trst" class="reset btn btn-success">Reset</button>

    <table id="table" class="tablesorter table table-striped" align ="left">
    {{#tests}}
                <caption>Results Found : {{numUnstableTests}}</caption>
    {{/tests}}
        <thead>
            <tr>
                <th data-field="testName"> Test Name</th>
                <th data-field="stat"> Stability</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each tests}} 
            {{#if name}}
            <tr>
                <td>{{@key}}</td>
                <td>{{this.stat}} %</td>
                {{#each arr}}

                <td align="center" bgcolor={{getStatusColour this.status}}> {{@key}} : <br> {{{getLink this}}} </td>  
                {{/each}}   
            </tr>  
            {{/if}}
            {{/each}}
        </tbody>
    </table>





